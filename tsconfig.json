{
  "compilerOptions": {
    "lib": ["ES2021", "DOM"],
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    "pretty": true
  },
  "exclude": ["node_modules", "dist"]
}
